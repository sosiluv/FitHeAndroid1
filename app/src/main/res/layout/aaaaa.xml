<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/btn_login_bg"
    android:orientation="vertical"
    tools:context="com.fithe.login.regActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="298dp"
            android:layout_height="123dp"
            android:background="@color/btn_login_bg"
            android:orientation="vertical"

            >

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/btn_login_bg"
                app:srcCompat="@drawable/ic_back_title" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="177dp"
                android:layout_height="69dp"
                android:gravity="bottom|center"
                android:text="본인인증"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="171dp"
                android:layout_height="match_parent"
                android:gravity="bottom|center"
                android:text="휴대본번호 입력" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                tools:layout_marginTop="0dp">


                <EditText
                    android:id="@+id/fieldPhoneNumber"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                    android:hint="@string/input_phone"
                    android:padding="10dp"
                    android:textColor="@color/input_register"
                    android:textColorHint="@color/input_register_hint" />

                <Button
                    android:id="@+id/validateButton"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/my_btn"
                    android:text="인증요청"
                    android:textColor="#ffffff"
                    android:textSize="10sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="인증번호 입력" />

            <EditText
                android:id="@+id/fieldVerificationCode"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:hint="@string/input_auth"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/input_register"
                android:textColorHint="@color/input_register_hint" />

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="71dp"
                android:gravity="center|top"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonResend"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/my_btn"
                    android:gravity="center"
                    android:text="인증번호 재전송"
                    android:textColor="#ffffff"
                    android:textSize="10sp" />
            </LinearLayout>

            <Button
                android:id="@+id/registerButton"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/my_btn"
                android:text="인증하기"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
